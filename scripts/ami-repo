#!/usr/bin/env bash
# ami-repo: Git repository server management CLI
# Wrapper for scripts/ami_repo.py
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(dirname "$SCRIPT_DIR")"

# Use root venv since ami_repo.py is under scripts/
exec "$ROOT_DIR/.venv/bin/python" "$SCRIPT_DIR/ami_repo.py" "$@"
